@model InspiringIPT.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "Alterar Password";
}
<div class="row">
    <div class="col-md-6">
        @using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            <section id="loginForm">
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="panel-body">
                    <div class="form-group">
                        <div class="col-md-10 col-md-offset-2">
                            <div style="margin-bottom: 25px" class="input-group">
                                <span class="input-group-addon">
                                    <i class="glyphicon glyphicon-lock"></i>
                                </span>
                                @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control input-group", @placeholder = "Password Antiga" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-10 col-md-offset-2">
                            <div style="margin-bottom: 25px" class="input-group">
                                <span class="input-group-addon">
                                    <i class="glyphicon glyphicon-lock"></i>
                                </span>
                                @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control input - group", @placeholder = "Nova password" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-10 col-md-offset-2">
                            <div style="margin-bottom: 25px" class="input-group">
                                <span class="input-group-addon">
                                    <i class="glyphicon glyphicon-lock"></i>
                                </span>
                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control input-group", @placeholder = "Confirmar nova password" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10" style="margin-top:10px">
                            <input type="submit" value="Alterar Password" class="btn btn-success" />
                        </div>
                    </div>
                </div>
            </section>
        }
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
