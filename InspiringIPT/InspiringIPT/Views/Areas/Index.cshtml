@model IEnumerable<InspiringIPT.Models.Areas>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Adicionar nova Área", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NomeArea)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NomeArea)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.AreaID }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.AreaID }) |
            @Html.ActionLink("Apagar", "Delete", new { id=item.AreaID })
        </td>
    </tr>
}

</table>
