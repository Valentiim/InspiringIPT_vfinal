@model IEnumerable<InspiringIPT.Models.Escola>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Adicionar Nova Escola", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NomeEscola)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SiglaEscola)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NomeEscola)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SiglaEscola)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.EscolaID }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.EscolaID }) |
            @Html.ActionLink("Apagar", "Delete", new { id=item.EscolaID })
        </td>
    </tr>
}

</table>
