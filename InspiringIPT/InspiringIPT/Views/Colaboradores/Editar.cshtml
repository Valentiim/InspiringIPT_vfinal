@model InspiringIPT.Models.Colaboradores

<div class="row">
    <div class="col-sm-14" style="background-color:lavenderblush;">
        <h2 class="page-header">@ViewBag.Title <medium>Alterar Dados<i class="glyphicon glyphicon-user"></i></medium></h2>
    </div>
    <div class="col-sm-14" style="background-color:lavender">
        <br />
        @using (Html.BeginForm())
            {
            @Html.AntiForgeryToken()
            <hr />
                <div class="form-horizontal">

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.ColaboradorID)
                    @Html.HiddenFor(model => model.UserID)
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.NomeProprio, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                <div style="margin-bottom: 25px" class="input-group">
                                    <span class="input-group-addon">
                                        <i class="glyphicon glyphicon-user"></i>
                                    </span>
                                    @Html.TextBoxFor(m => m.NomeProprio, new { @class = "form-control input-group" })
                                </div>
                                @Html.ValidationMessageFor(m => m.NomeProprio, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Apelido, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                <div style="margin-bottom: 25px" class="input-group">
                                    <span class="input-group-addon">
                                        <i class="glyphicon glyphicon-user"></i>
                                    </span>
                                    @Html.TextBoxFor(m => m.Apelido, new { @class = "form-control input-group" })
                                </div>
                                @Html.ValidationMessageFor(m => m.Apelido, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.NIF, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                <div style="margin-bottom: 25px" class="input-group">
                                    <span class="input-group-addon">
                                        <i class="glyphicon glyphicon-paperclip"></i>
                                    </span>
                                    @Html.TextBoxFor(m => m.NIF, new { @class = "form-control input-group" })
                                </div>
                                @Html.ValidationMessageFor(m => m.NIF, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Contacto, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                <div style="margin-bottom: 25px" class="input-group">
                                    <span class="input-group-addon">
                                        <i class="glyphicon glyphicon-phone-alt"></i>
                                    </span>
                                    @Html.TextBoxFor(m => m.Contacto, new { @class = "form-control input-group" })
                                </div>
                                @Html.ValidationMessageFor(m => m.Contacto, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Localidade, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                <div style="margin-bottom: 25px" class="input-group">
                                    <span class="input-group-addon">
                                        <i class="glyphicon glyphicon-home"></i>
                                    </span>
                                    @Html.TextBoxFor(m => m.Localidade, new { @class = "form-control input-group" })
                                </div>
                                @Html.ValidationMessageFor(m => m.Localidade, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group" style="text-align:left">
                        <div class="col-md-offset-1 col-md-6">
                            <input type="submit" value="Guardar" class="btn btn-success" />
                            @Html.ActionLink("Ver os Colaboradores", "Listagem", "", new { @class = "btn btn-info" })
                        </div>
                    </div>
                </div>
        }
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}